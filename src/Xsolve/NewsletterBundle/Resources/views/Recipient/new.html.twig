
{% extends 'XsolveNewsletterBundle::layout.html.twig' %}

{% form_theme form with 'XsolveNewsletterBundle:Form:bootstrapRow.html.twig' %}

{% block content %}

<h3>Dodaj odbiorcę:</h3>

<form class="form-horizontal" action="{{ path('xsolve_newsletter_recipient_new', { 'listId': listId }) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}
    {{ form_rest(form) }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="icon-ok-sign icon-white"></i> Dodaj adres
        </button>
        <a href="{{ path('xsolve_newsletter_list_details', { 'id': listId }) }}" class="btn btn-small">
            <i class="icon-circle-arrow-left"></i> Wróć
        </a>
    </div>
</form>

{% endblock %}
