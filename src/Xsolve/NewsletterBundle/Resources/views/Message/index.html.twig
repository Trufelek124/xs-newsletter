
{% extends 'XsolveNewsletterBundle::layout.html.twig' %}

{% block content %}

<h3>Wiadomości:</h3>

<p>
    <a href="{{ path('xsolve_newsletter_message_new') }}" class="btn">
        <i class="icon-plus-sign"></i> Dodaj wiadomość
    </a>
</p>


{% if messages|length > 0 %}

<table class="table table-bordered table-condensed table-striped">
    <thead>
        <th>#</th>
        <th>Data utworzenia:</th>
        <th>Tytuł:</th>
    </thead>
    <tbody>
        {% for msg in messages %}
        <tr>
            <td>{{ loop.index }}.</td>
            <td>{{ msg.date|date('d.m.Y') }}</td>
            <td>
                <strong><a href="{{ path('xsolve_newsletter_message_edit', { 'id': msg.id }) }}">
                    {{ msg.title }}
                </strong></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% else %}
<p class="alert alert-info">Brak wiadomości</p>
{% endif %}

{% endblock %}
