
{# pojedynczy wiersz formularza dla bootstrap #}
{% block form_row %}

{% spaceless %}
     <div class="control-group {% if errors %}error{% endif %}">
        {{ form_label(form, null, { 'label_attr': { 'class': 'control-label' }}) }}
        <div class="controls">
            {{ form_errors(form) }}
            {{ form_widget(form, { 'required': false }) }}
        </div>
    </div>
{% endspaceless %}

{% endblock form_row %}


{# wyświetlanie błędów formularza #}
{% block field_errors %}

{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <div class="alert alert-error span4" style="margin-bottom: 8px; margin-left: 0;">
                <i class="icon-warning-sign"></i> {{ error.message|trans }}
            </div>
        {% endfor %}
    {% endif %}
{% endspaceless %}

{% endblock field_errors %}

{# widget wyboru #}
{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        <div class="checkbox">
            {{ form_widget(child) }}
            {{ form_label(child) }}
        </div>
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}
